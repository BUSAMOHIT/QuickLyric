<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.quicklyric" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_quicklyric</item>
        <item name="popupMenuStyle">@style/PopupMenu.quicklyric</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.quicklyric</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.quicklyric</item>
        <item name="actionDropDownStyle">@style/DropDownNav.quicklyric</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.quicklyric</item>
        <item name="actionModeCloseButtonStyle">@style/ActionMode.CloseButton</item>
        <item name="actionModeBackground">@drawable/cab_background_top_quicklyric</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:listViewStyle">@style/ListView.quicklyric</item>
        <item name="android:editTextStyle">@style/EditTextQuicklyric</item>
        <item name="android:scrollViewStyle">@style/ScrollViewQuicklyric</item>
        <item name="android:checkboxStyle">@style/CheckBoxQuicklyric</item>
        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.quicklyric.Widget</item>

        <item name="showcaseViewStyle">@style/quicklyricShowcaseTheme</item>
    </style>

    <style name="ActionBar.Solid.quicklyric" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_quicklyric</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_quicklyric</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_quicklyric</item>
        <item name="progressBarStyle">@style/ProgressBar.quicklyric</item>
        <item name="titleTextStyle">@style/ActionBar.Title</item>
    </style>

    <style name="ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_quicklyric</item>
    </style>

    <style name="ActionBar.Transparent.Quicklyric" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_quicklyric</item>
        <item name="progressBarStyle">@style/ProgressBar.quicklyric</item>
    </style>

    <style name="PopupMenu.Quicklyric" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_quicklyric</item>
    </style>

    <style name="DropDownListView.Quicklyric" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_quicklyric</item>
    </style>

    <style name="ListView.Quicklyric" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/selectable_background_quicklyric</item>
        <item name="android:divider">#ccc</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextQuicklyric" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxQuicklyric" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="DropDownNav.Quicklyric" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_quicklyric</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_quicklyric</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_quicklyric</item>
    </style>

    <style name="ProgressBar.Quicklyric" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_quicklyric</item>
    </style>

    <style name="ActionButton.CloseMode.Quicklyric" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_quicklyric</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Quicklyric.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.quicklyric</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.quicklyric</item>
    </style>

    <style name="ScrollViewQuicklyric" parent="android:Widget.ScrollView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="quicklyricShowcaseTheme" parent="ShowcaseView">
        <item name="sv_showcaseColor">#ffe6800b</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_backgroundColor">#f0ffc799</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetailText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#e6800b</item>
    </style>

    <style name="CustomDetailText" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#6c6c6c</item>
    </style>

</resources>