<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.QuickLyric" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_quicklyric
        </item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Quicklyric</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Quicklyric</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.QuickLyric</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionMode.CloseButton</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_quicklyric</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:listViewStyle">@style/ListView.quicklyric</item>
        <item name="android:editTextStyle">@style/EditTextQuicklyric</item>
        <item name="android:scrollViewStyle">@style/ScrollViewQuicklyric</item>
        <item name="android:checkboxStyle">@style/CheckBoxQuicklyric</item>
        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Quicklyric.Widget</item>
        <item name="showcaseViewStyle">@style/quicklyricShowcaseTheme</item>
    </style>

    <style name="ActionBar.Solid.QuickLyric" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_quicklyric</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_quicklyric</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_quicklyric</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Quicklyric</item>
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
    </style>

    <style name="ActionMode.CloseButton" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_quicklyric</item>
    </style>

    <style name="ActionBar.Transparent.Quicklyric" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_quicklyric</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Quicklyric</item>
    </style>

    <style name="PopupMenu.Quicklyric" parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_quicklyric</item>
    </style>

    <style name="DropDownListView.Quicklyric" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_quicklyric</item>
    </style>

    <style name="ListView.Quicklyric" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/selectable_background_quicklyric</item>
        <item name="android:divider">#ccc</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="ActionBar.Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextQuicklyric" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxQuicklyric" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="ProgressBar.Quicklyric" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_quicklyric</item>
    </style>

    <style name="ActionButton.CloseMode.Quicklyric" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_quicklyric</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Quicklyric.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Quicklyric</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Quicklyric</item>
    </style>

    <style name="ScrollViewQuicklyric" parent="android:Widget.ScrollView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="quicklyricShowcaseTheme" parent="ShowcaseView">
        <item name="sv_showcaseColor">#ffe6800b</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_backgroundColor">#f0ffc799</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetailText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#e6800b</item>
    </style>

    <style name="CustomDetailText" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#6c6c6c</item>
    </style>

</resources>